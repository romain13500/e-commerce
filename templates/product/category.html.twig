{% extends "base.html.twig" %}

{% block title %}
    Catégorie : 
    {{ category.name }}
{% endblock %}

{% block body %}
    <h1>Catégorie : {{ category.name }}</h1>

    <div class="row">
        {% for p in category.products %}
          <div class="col-3">
                <div class="card">
                        <img src="{{ p.mainPicture }}" alt="img" class="img-fluid">
                        <div class="card-body">
                            <h4 class="card-title">{{ p.name}} ({{p.price / 100}}€) </h4>
                            <span class="badge rounded-pill bg-info">{{p.category.name}}</span>
                            <p class="card-text">{{p.shortDescription}}</p>
                            <a href="#" class="btn btn-info btn-sm">Détails</a>
                            <a href="#" class="btn btn-success btn-sm">Ajouter</a>
                        </div>
                    </div>
                </div>
        {% endfor %}
    </div>

    
{% endblock %}